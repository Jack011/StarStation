/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  margin-top: 20px;
  text-align: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  font-size: 14px;
  margin-top: 40px;
}

.index-line{
  width: 100%;
  height: 3px;
  background: #39342d;
  margin: 10px 0;
}

.index-door{
  margin-top: 20px;
  width: 120px
}

.index-star{
  text-align: center;
  font-weight: bold;
  color: #39342d
}
.index-extra{
  font-size: 12px;
  color: gray;
  padding: 20px 40px;
  letter-spacing: 1px;
  line-height: 1.2rem;
}